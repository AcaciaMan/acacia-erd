{
  "name": "acacia-erd",
  "displayName": "acacia-erd",
  "description": "Entity Relationship Diagram (ERD) with grid layout",
  "repository": {
    "type": "git",
    "url": "https://github.com/AcaciaMan/acacia-erd"
  },
  "version": "1.2.3",
  "publisher": "manacacia",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "acacia-erd.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtensionContainer",
          "title": "Acacia Erd",
          "icon": "resources/erd_icon.svg"
        }
      ]
    },
    "views": {
      "myExtensionContainer": [
        {
          "type": "webview",
          "id": "erdView",
          "name": "Manage ERD",
          "icon": "resources/erd_icon.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Acacia ERD Configuration",
      "properties": {
        "acacia-erd.entitiesJsonPath": {
          "type": "string",
          "default": "resources/entities.json",
          "description": "Path to the JSON file containing the entities list."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36"
  }
}
